# ==============================================================================
# GprintEx Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values

# Application
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret
PORT=4000

# ==============================================================================
# Oracle ADB Configuration
# ==============================================================================
ORACLE_HOST=adb.us-ashburn-1.oraclecloud.com
ORACLE_PORT=1522
ORACLE_DATABASE=your_database_name_high
ORACLE_USER=ADMIN
ORACLE_PASSWORD=your_secure_password
ORACLE_POOL_SIZE=10

# Path to Oracle wallet directory (contains cwallet.sso, tnsnames.ora, etc.)
# This should be mounted as a volume in Docker
# TNS_ADMIN=/path/to/wallet

# ==============================================================================
# Keycloak Configuration
# ==============================================================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=gprint
KEYCLOAK_CLIENT_ID=gprint-api
KEYCLOAK_CLIENT_SECRET=your_client_secret

# JWT shared secret for HS256 validation
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# ==============================================================================
# Development Only - Keycloak Admin
# ==============================================================================
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_DB_PASSWORD=keycloak

# ==============================================================================
# GprintEx Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values

# Application
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret
PORT=4000

# ==============================================================================
# Oracle ADB Configuration
# ==============================================================================
ORACLE_TNS_ALIAS=your_tns_alias_high
ORACLE_USER=ADMIN
ORACLE_PASSWORD=your_secure_password
ORACLE_POOL_SIZE=10

# Oracle Wallet Configuration (choose ONE method):
#
# Method 1: Direct path to wallet directory (local development)
# ORACLE_WALLET_PATH=/path/to/wallet
#
# Method 2: Base64-encoded wallet.zip (production/containers)
# Generate with: base64 -i wallet.zip | tr -d '\n' > wallet.b64
# ORACLE_WALLET_BASE64=UEsDBBQAAAAIAGCJ...
#
# The wallet directory must contain: cwallet.sso, tnsnames.ora, sqlnet.ora

# ==============================================================================
# Keycloak Configuration
# ==============================================================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=gprint
KEYCLOAK_CLIENT_ID=gprint-api
KEYCLOAK_CLIENT_SECRET=your_client_secret

# JWT shared secret for HS256 validation
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# ==============================================================================
# Development Only - Keycloak Admin
# ==============================================================================
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_DB_PASSWORD=keycloak

# Elixir and Erlang versions for buildpack
# https://render.com/docs/elixir-erlang-versions

# Use Erlang/OTP 27 (28 may have compatibility issues)
erlang_version=27.2

# Latest stable Elixir
elixir_version=1.18.4

# Always rebuild from scratch if config changes
always_rebuild=false

# Enable runtime config compilation
runtime_path=/app
